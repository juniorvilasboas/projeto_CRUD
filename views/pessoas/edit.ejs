<%- include('../partials/header') %>
    <h1>Editar pessoa</h1>
    <p><a href="/pessoas">Voltar</a></p>
    <form method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o nome" value="<%- pessoa[0].nome %>" />
        </div>
        <div class="form-group">
            <label for="nascimento">Nascimento</label>
            <input type="text" class="form-control" id="nascimento" name="nascimento" placeholder="Digite o nascimento" value="<%- moment(pessoa[0].nascimento).format('DD/MM/YYYY') %>" />
        </div>
        <div class="form-group">
            <label for="cargo">Cargo</label>
            <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Digite o cargo" value="<%- pessoa[0].cargo %>" />
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
    </form>
<%- include('../partials/footer') %>