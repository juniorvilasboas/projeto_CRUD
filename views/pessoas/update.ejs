<%- include('../partials/header') %>
    <h1>Editar pessoa</h1>
    <p><a href="/pessoas">Voltar a lista de pessoas</a></p>
    <form method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" value="<%= pessoa.nome %>" placeholder="Nome completo">
        </div>
        <div class="form-group">
            <label for="nascimento">Nascimento</label>
            <input type="text" class="form-control" id="nascimento" name="nascimento" value="<%= pessoa.nascimento %>" placeholder="Data de nascimento">
        </div>
        <div class="form-group">
            <label for="cargo">Cargo</label>
            <input type="text" class="form-control" id="cargo" name="cargo" value="<%= pessoa.cargo %>" placeholder="Cargo">
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>
    </form>
<%- include('../partials/footer') %>